WITH cte AS (
    SELECT c.user_id
    , COUNT(*) AS attempts
    , SUM(CASE WHEN c.action = 'confirmed' THEN 1 ELSE 0 END) AS 
    success
    FROM  Confirmations c
    GROUP BY c.user_id
)

SELECT s.user_id
, ROUND(COALESCE(cte.success,0)/COALESCE(cte.attempts,1),2) AS confirmation_rate
FROM signups s
LEFT JOIN cte
ON s.user_id = cte.user_id
GROUP BY s.user_id